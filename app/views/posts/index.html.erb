<div class= "centering">
<% if @posts.present? %>
	<% @posts.each do |x| %>
		 <%= link_to user_post_path(current_user.id, x.id) do %>
				
					<figure class="snip1423"><%= image_tag x.product.avatar.url %>
						  <figcaption>
				  			<h3><%= x.product.name %><h3>
				  			<p><%= x.product.description %></p>
				  			<div class="price">
				  				<s>RM.55</s>RM.<%= x.price %>
		  					</div>
		  				</figcaption><i class="ion-android-cart"></i>
					</figure>
				
		<%end%>
	<% end %>
<% else %>
<p>There aren't any deals. Please create a post in the admin page, dear coders.</p>
<% end %>
</div>


<br><br>
<h2><%= @wishlist.name %></h2>
<br>


<%= @wishlist.name %>  <br>
<%= @wishlist.description %> <br>
<h4>CURRENT VOTES: <%= @wishlist.target_votes %>  </h4> 
<%= image_tag(@wishlist.avatar(:medium)) %>
<div class="container">
  <h2>Progress Bar for Vote Target</h2>
  <p>You need to get 10 votes for this wish to be granted</p>
	  <div class="progress">
	  	<% if @wishlist.target_votes == 0 %>
		    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:0%">
		      0%
		    </div>
	   	<% elsif @wishlist.target_votes == 1 %>
		    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:10%">
		      10%
		    </div>
	   	<% elsif @wishlist.target_votes == 2 %>
		    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:20%">
		      20%
		    </div>
	   	<% elsif @wishlist.target_votes == 3 %>
		    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:30%">
		      30%
		    </div>	
	   	<% elsif @wishlist.target_votes == 4 %>
		    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:40%">
		      40%
		    </div>	
	   	<% elsif @wishlist.target_votes == 5 %>
		    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:50%">
		      50%
		    </div> 
	   	<% elsif @wishlist.target_votes == 6 %>
		    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:60%">
		      60%
		    </div> 
	   	<% elsif @wishlist.target_votes == 7 %>
		    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:70%">
		      70%
		    </div>
	   	<% elsif @wishlist.target_votes == 8 %>
		    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:80%">
		      80%
		    </div>
	   	<% elsif @wishlist.target_votes == 9 %>
		    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:90%">
		      90%
		    </div>
	   	<% else @wishlist.target_votes == 10 %>
		    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:100%">
		      100%
		    </div>
		  <% end %>
	  </div>
</div>


<%= button_to 'vote', wishlist_votes_path(@wishlist) %><br>


<%= link_to 'Back', wishlists_path %><br>

<div container>
<h1> My wishlist </h1>

<% if current_user.wishlists.any? %>
 <% current_user.wishlists.all.each do |x| %>
 	<%= image_tag (x.avatar) %> <br>
 	<%= x.name %>  <br>
 	<%= x.description %> 
 <%end%>
 <%else%>
 <h2>You don't have any wishlist. Create one! </h2>
 <%end%>
 </div>

 <div side bar>

<%= image_tag current_user.avatar (:medium) %><br>

<%= link_to 'Edit Profile', edit_user_path(current_user) %> <br>
<%= link_to 'Create Wishlist', new_wishlist_path(current_user) %><br>
Purchase History <br>

<%= link_to 'Back', users_path %><br>

</div>

